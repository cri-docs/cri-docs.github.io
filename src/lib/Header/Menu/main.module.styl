.container
  display flex
  width calc(var(--index-width))
  transition width 0.5s
  &.isClosed
    width var(--buttons-width)
  .buttons
    flex-shrink 0
    display flex
    flex-direction column
    justify-content: center
    align-items center
    height 100vh
    width var(--buttons-width)
    gap 2rem
    @media _mobile
      flex-direction row
      position absolute
      top 0
      left 0
      height auto
      width auto
      z-index 10
      padding var(--padding)
    button
      height 100%
      width 100%
      border-right 1px solid #ffffffaa
      writing-mode sideways-lr
      direction rtl
      text-orientation mixed
      text-transform uppercase
      @media _mobile
        writing-mode horizontal-tb
        text-orientation mixed
        border-right none
      &:global(.active)
        border-right 2px solid #ffffff
        @media _mobile
          border-right none
          border-bottom 1px solid #ffffff
  .toggle
    position absolute
    z-index 14
    top calc(var(--padding) - 1rem)
    right 1rem
    width 3rem
    height 3rem
    padding 0.2rem
    border-radius 50%
    opacity 1
    transition-delay 1s
    transition opacity .5s
    @media _mobile
      display none
  &.isClosed .toggle
    opacity 0
    pointer-events none
  .otherSubContainer
  .menuSubContainer
    flex-shrink 0
    width calc(var(--index-width) - var(--buttons-width))
    max-width 500px
    height 100vh
    padding var(--padding)
    padding-top calc(var(--padding) )
    padding-left calc(var(--padding))
    color white
    z-index 5
    overflow-y auto
    overscroll-behavior contain
    li
      &.extra
          margin-top 2rem
      &.extra ~ .extra
          margin-top 0
    @media _mobile
      width 100vw
      height auto
      padding-top calc(var(--padding) * 2 + var(--buttons-width))
  .otherSubContainer
    hyphens auto
    h2
      font-size inherit
    ul
      padding-inline-start: 2rem
    table
      font-size 0.8em
      th
        display none
  .menuSubContainer
    ul
      display flex
      flex-direction column
      align-items start
      justify-content flex-end
      margin 0
      padding 0
      list-style none
      gap 0.11rem
      .label
        display flex
        align-items flex-start
        justify-content center
        padding-block .1rem
        gap 1rem
        &:global(.active)
          text-decoration underline
        a
          display flex
          flex-direction row
          align-items flex-start
          justify-content flex-start  
          flex-grow 1
          width 100%
          cursor pointer
          border-radius 2px
          :first-child
            display block
            width 2ch
          .circle
            flex-shrink 0
            flex-grow 0
            height 1lh
            width 1lh
            display flex
            align-items center
            justify-content center
            margin-right .5rem
            div
              flex-shrink 0
              flex-grow 0
              width .8em
              height .8em
              border 1.5px solid white
              background-color transparent
              border-radius 100%
              &:global(.active)
                background-color white
      ul
        padding-block .4rem
        .label
          a
            :first-child
              width 3.1ch

  .otherSubContainer
    ul
      li
        position relative
        list-style none
        &:before
          --size 1.2rem
          --height 1px
          content ""
          background-color currentColor
          position absolute
          left calc(-1 * var(--size) - .5rem)
          height var(--height)
          width var(--size)
          transform translateY(calc(.55lh - (var(--height) / 2)))