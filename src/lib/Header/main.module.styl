header
  position fixed
  top 0
  left 0
  height var(--header-height-full)
  width 100vw
  font-size 5rem
  z-index 10
  background-color var(--color)
  color white
  transition height 0.5s
  display flex
  justify-content space-between
  align-items flex-end
  overflow hidden
  .headerContent
    flex-shrink 1
    display flex
    flex-direction column
    justify-content center
    align-items center
    text-align center
    height 100%
    width 100vw
    padding var(--padding)
    gap var(--padding)
    padding-top calc(var(--padding) - .5rem)
    transition padding 0.5s
    h1
      position relative
      margin 0
      font-size var(--title-font-size)
      line-height 0.98
      letter-spacing 1px
      hyphens auto
      font-family var(--font-header)
      font-weight 100
    h2
      width 400px
      margin 0
      font-size var(--subtitle-font-size)
      font-weight 500
      line-height 1.1
  .infoBox
    position absolute
    right 1rem
    bottom 0
    flex-shrink 0
    display flex
    justify-content center
    align-items center
    padding var(--padding)
    height calc(var(--header-height-collapsed) + 1lh)
    font-size 3rem
    transition padding 0.5s, font-size 0.5s, height 0.5s
  .smallTitle
    all unset
    display flex
    justify-content center
    align-items center
    position absolute
    top 0
    left 50%
    height var(--header-height-collapsed)
    font-size var(--small-title-font-size)
    transform translate(-50%, -100%)
    transition transform 0.3s
    cursor pointer

  &.isCollapsed
    height var(--header-height-collapsed)
    .headerContent
      height 50vh
      // padding var(--header-height-collapsed)
    .infoBox
      height calc(var(--header-height-collapsed) + 0lh)
      padding-block 0
      font-size var(--small-title-font-size)
    .smallTitle
      transform translate(-50%, 0)
