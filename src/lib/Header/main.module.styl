.container
  position fixed
  top 0
  left 0
  height var(--header-height-full)
  width calc(var(--header-width-full) + var(--index-width))
  font-size 5rem
  z-index 10
  background-color var(--color)
  color white
  transition left 0.5s
  display flex
  justify-content space-between
  align-items flex-start
  overflow hidden
  @media _mobile
    font-size 5rem
    flex-direction column
    width 100vw
    height auto
  .icon
    --border-width 1px
    background-color var(--color)
    position fixed
    top var(--buttons-width)
    left var(--buttons-width)
    z-index 15
    height calc(1em +var(--border-width))
    width calc(1em +var(--border-width))
    padding 0.1em
    padding-top 0.05em
    border-radius 100%
    border solid 2px white
    box-shadow 4px 4px 10px 2px #00000033
    transform translate(-50%, -25%)    
    cursor pointer
    transition left 0.5s
    @media _mobile
      top 1rem
      left calc(100vw - 1rem)
      transform translate(-100%, 0%)
    &.svg
      padding-top 2px
    &.isCollapsedFully
      @media _mobile
        left var(--buttons-width)
      // left calc(var(--header-width-full) + 1rem)
  header
    width var(--header-width-full)
    height var(--header-height-full)
    display flex
    flex-direction column
    justify-content center
    align-items center
    text-align center
    padding var(--padding)
    // padding-top calc(var(--padding) * 2 + 4rem)
    padding-bottom calc(var(--padding) * 4 + 4rem)
    gap var(--padding)
    border-right 1px solid white
    @media _mobile
      height auto
    h1
      position relative
      margin 0
      font-size var(--title-font-size)
      line-height 0.98
      letter-spacing 1px
      hyphens auto
      font-family var(--font-header)
      font-weight 100
    h2
      width 400px
      margin 0
      font-size var(--subtitle-font-size)
      font-weight 500
      line-height 1.1

  &.isCollapsed
    left calc(-1 * var(--header-width-full))
    .headerContent
      height 50vh
  &.isCollapsedFully
    left calc(-1 * var(--header-width-full) - var(--index-width) + var(--buttons-width))