header
  position fixed
  top 0
  left 0
  height var(--header-height-full)
  width 100vw
  font-size 5rem
  z-index 10
  background-color var(--color)
  color white
  transition height 0.5s
  display flex
  justify-content space-between
  align-items flex-end
  .headerContent
    padding var(--padding)
    display flex
    flex-direction column
    justify-content flex-end
    align-items flex-start
    transition padding 0.5s
    h1
      position relative
      margin 0
      hyphens auto
    h2
      margin 0
      width 30%
      font-size 3rem
  .infoBox
    display flex
    justify-content center
    align-items center
    padding var(--padding)
    height calc(var(--header-height-collapsed) + 1lh)
    font-size 3rem
    transition padding 0.5s, font-size 0.5s, height 0.5s
  .smallTitle
    all unset
    display flex
    justify-content center
    align-items center
    position absolute
    top 0
    left 50%
    height var(--header-height-collapsed)
    font-size 2rem
    transform translate(-50%, -100%)
    transition transform 0.3s
    cursor pointer

  &.isCollapsed
    height var(--header-height-collapsed)
    .headerContent
      padding var(--header-height-collapsed)
    .infoBox
      height calc(var(--header-height-collapsed) + 0lh)
      padding-block 0
      font-size 2rem
    .smallTitle
      transform translate(-50%, 0)
