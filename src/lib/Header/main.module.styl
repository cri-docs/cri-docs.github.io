.container
  position fixed
  top 0
  left 0
  height var(--header-height-full)
  width calc(var(--header-width-full) + var(--index-width))
  z-index 10
  background-color var(--color)
  color white
  transition left 0.5s
  display flex
  justify-content space-between
  align-items flex-start
  overflow hidden
  @media _mobile
    flex-direction column-reverse
    justify-content flex-end
    width 100vw
    height 100dvh
    overflow-y scroll
    overflow-x visible
    overscroll-behavior contain
  @media print
    display none
  .icon
    --border-width 1px
    position fixed
    top calc(var(--padding) - 1rem)
    left calc(var(--buttons-width) / 2)
    left calc(-2 * var(--buttons-width))
    transform translate(-50%,0) rotate(0deg)
    height 3rem
    width 3rem
    z-index 15
    cursor pointer
    transition left 0.5s
    @media _mobile
      display flex
      justify-content center
      align-items center
      top 1rem
      left calc(100vw - 1rem)
      padding 0.5rem
      transform translate(-100%, 0%)
      background-color var(--color)
      border-radius 50%
      svg
        display flex
        justify-content center
        align-items center
    &.isCollapsed
      left calc(var(--buttons-width) / 2)
      @media _mobile
        transform rotate(180deg) translate(100%, 0%)
        left var(--buttons-width)
    &.isCollapsedFully
      @media _mobile
        left var(--buttons-width)
  .welcomeText
    width var(--header-width-full)
    height var(--header-height-full)
    display flex
    flex-direction column
    justify-content flex-start
    align-items flex-start
    text-align left
    padding var(--padding)
    padding-top calc(var(--padding)- 2px)
    padding-bottom calc(var(--padding) * 4 + 4rem)
    gap var(--padding)
    line-height 0.95
    @media _mobile
      max-width 500px
      height auto
    h1
      position relative
      margin 0
      font-family var(--font-header)
      font-size calc(var(--welcome-font-size) * 1)
      // font-weight 900
      letter-spacing 3px
      hyphens auto
      // NEIN
      // font-size calc(var(--welcome-font-size)* 4)
      // letter-spacing 1px
      // font-weight unset
      // line-height 0.85
      font-feature-settings: "ss04" 1, "ss05" 1, "ss06" 1, "ss08" 1, "ss10" 1, "ss11" 1, "ss17" 1, "liga" 1, "dlig" 1;
    h2
      // width 400px
      margin 0
      font-family var(--font-header)
      font-size calc(var(--welcome-font-size)* 1)
      line-height 1.02
      letter-spacing 0.5px
      hyphens auto
      // font-weight unset
    h1
    h2
      // line-height 1

  &.isCollapsed
    left calc(-1 * var(--header-width-full))
    @media _mobile
      overflow visible
    .headerContent
      height 50vh
  &.isCollapsedFully
    left calc(-1 * var(--header-width-full) - var(--index-width) + var(--buttons-width))