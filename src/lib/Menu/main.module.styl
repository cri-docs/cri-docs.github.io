.container
  display flex
  width calc(var(--index-width))
  transition width 0.5s
  &.isClosed
    width var(--buttons-width)
  .buttons
    flex-shrink 0
    display flex
    flex-direction column
    justify-content: space-around
    align-items center
    height 100vh
    width var(--buttons-width)
    gap 2rem
    button
      height 100%
      width 100%
      border-right 1px solid #ffffffaa
      writing-mode vertical-lr
      direction ltr
      text-orientation upright
      text-transform uppercase
      &:global(.active)
        border-right 2px solid #ffffff
  .toggle
    position absolute
    z-index 14
    top calc(var(--padding) )
    right 1rem
    width 4rem
    height 4rem
    padding 0.2rem
    border-radius 50%
    @media _mobile
      display none
  &.isClosed .toggle
    right calc(-1 * var(--buttons-width))
  .subContainer
    flex-shrink 0
    width calc(var(--index-width) - var(--buttons-width))
    max-width 500px
    height 100vh
    padding var(--padding)
    padding-top calc(var(--padding) * 2 + 4rem )
    padding-left calc(var(--padding))
    color white
    z-index 5
    overflow-y auto
    overscroll-behavior contain
    ul
      display flex
      flex-direction column
      align-items start
      justify-content flex-end
      margin 0
      padding 0
      list-style none
      gap 0.11rem
      .label
        display flex
        align-items flex-start
        justify-content center
        padding-block .1rem
        gap 0.5rem
        &:global(.active)
          text-decoration underline
        .circle
          height 1lh
          width 1lh
          display flex
          align-items center
          justify-content center
          div
            flex-shrink 0
            width .8em
            height .8em
            border 1.5px solid white
            background-color transparent
            border-radius 100%
            &:global(.active)
              background-color white
        a
          display block
          flex-grow 1
          width 100%
          cursor pointer
          border-radius 2px
          // padding .4rem
          // padding-block 0.3rem
          display block