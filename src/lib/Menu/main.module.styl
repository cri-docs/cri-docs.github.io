nav
  position sticky
  top var(--header-height-collapsed)
  left 0
  width calc(var(--nav-width) - var(--padding)*1)
  padding var(--padding)
  z-index 5
  ul
    display flex
    flex-direction column
    align-items start
    justify-content flex-end
    margin 0
    padding 0
    gap .3lh
    max-width 450px
    list-style none
    .label
      display flex
      align-items flex-start
      gap 1ch
      :global(.active)
        text-decoration underline
    a
      display block