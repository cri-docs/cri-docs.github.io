nav
  background-color blue
  position absolute
  bottom 0
  left 0
  width calc(var(--nav-width)- var(--padding)*1)
  height 100vh
  padding var(--padding)
  color white
  transform translateY(100%)
  ul
    display flex
    flex-direction column
    margin 0
    padding 0
    gap .3lh
    max-width 450px
    list-style none
    .label
      display flex
      align-items flex-start
      gap 1ch