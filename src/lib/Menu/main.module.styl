nav
  position sticky
  top var(--header-height-collapsed)
  left 0
  width calc(var(--nav-width) - var(--padding)*1)
  padding var(--padding)
  padding-top calc(var(--padding) / 2)
  padding-left calc(var(--padding) / 4)
  z-index 5
  color black
  ul
    display flex
    flex-direction column
    align-items start
    justify-content flex-end
    margin 0
    padding 0
    max-width 450px
    list-style none
    .label
      display flex
      align-items flex-start
      padding-block .1rem
      gap 1rem
      .index
        width 2.2ch
        flex-shrink 0
        padding 0
        padding-block 0.3rem
        text-align right
      a
        display block
        flex-grow 1
        width 100%
        cursor pointer
        border-radius 2px
        padding .4rem
        padding-block 0.3rem
        // background-color blue
        // color white
        display block
        &:global(.active)
          background-color black
          color white
        &:hover
          background-color rgba(0,0,0,0.1)
          color black