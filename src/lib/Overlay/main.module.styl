.container
  display flex
  align-items center
  justify-content center
  position fixed
  top 0
  left 0
  width 100vw
  height var(--header-height-collapsed)
  background-color rgba(0,0,255,1)
  color white
  z-index 9
  transition height 0.5s
  &.active
    height 100vh
    backdrop-filter blur(5px)