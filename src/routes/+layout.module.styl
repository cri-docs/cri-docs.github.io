.container
  --current-index-width var(--index-width)
  position relative
  min-height 100vh
  transition background-color 0.5s ease, color 0.5s ease
  @media _mobile
    width 100vw
  @media print
    background-color white
    width 100%
  &.collapsed
    --current-index-width var(--buttons-width)
  main
    position relative
    display flex
    justify-content center
    align-items flex-start
    flex-direction column
    .hero
      --padding-hero 20vh
      height 0
      width 100vw
      transition margin 0.5s ease, height 0.5s ease
      object-fit cover
      object-position center center
      &.isHome
        height calc(100vh - var(--padding-hero))
      &.headerIsCollapsed
        margin-top 0
      @media print
        display none
    .content
      width 100%
  .background
    @media print
      display none
  .print
    --border-width: 1px;
    background-color: var(--color);
    position: fixed;
    top: var(--buttons-width);
    right: var(--buttons-width);
    z-index: 15;
    height: calc(5rem + var(--border-width));
    width: calc(5rem + var(--border-width));
    padding: 1rem;
    border-radius: 100%;
    border: solid 2px #fff;
    color white
    box-shadow: 4px 4px 10px 2px rgba(0, 0, 0, 0.2);
    transform: translate(50%, -25%);
    cursor: pointer;
    transition: left 0.5s;
    @media _mobile
      top calc(100dvh - 5rem - var(--border-width) - 1rem);
      right 1rem
      transform translate(0%, 0%)
    @media print
      display none

