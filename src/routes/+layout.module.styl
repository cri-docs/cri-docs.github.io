.container
  position relative
  min-height 100vh
  transition background-color 0.3s ease, color 0.3s ease
  &.color
    color white
    background-color var(--color)
  main
    position relative
    display flex
    justify-content center
    align-items flex-start
    section
      flex-shrink 0
      width var(--text-width)

  header
    position: -webkit-sticky; /* Safari */  
    position sticky
    top 0
    padding var(--padding)
    z-index 10
    h1
      position relative
      width 100vw
      margin 0