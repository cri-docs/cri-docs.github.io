.container
  --current-index-width var(--index-width)
  position relative
  min-height 100vh
  transition background-color 0.5s ease, color 0.5s ease
  @media _mobile
    width 100vw
  @media print
    background-color white
    width 100%
  &.collapsed
    --current-index-width var(--buttons-width)
  main
    position relative
    display flex
    justify-content center
    align-items flex-start
    flex-direction column
    a
      text-decoration underline
      @media (hover: hover)
        &:hover
          color var(--color-secondary)
    .topbar
      display flex
      flex-direction column
      align-items: flex-start;
      font-size 0.7em
      margin 0
      padding 0
    .hero
      --padding-hero 20vh
      height 0
      width 100vw
      transition margin 0.5s ease, height 0.5s ease
      object-fit cover
      object-position center center
      &.isHome
        height calc(100vh - var(--padding-hero))
      &.headerIsCollapsed
        margin-top 0
      @media print
        display none
    .caption
      width 100%
      max-width var(--text-width)
      text-align: left 
      padding-top 0.3lh
      padding-right var(--padding)
      padding-left calc(var(--buttons-width) + .5rem)
      margin-left clamp(var(--current-index-width), 100vw, var(--l))
      @media _small
        margin-left var(--l)
      @media _mobile
        margin-left 0
        padding-left var(--padding)
    .content
      width 100%
  .background
    @media print
      display none
  .print svg
    --border-width: 1px;
    position fixed
    bottom calc(var(--padding) + 4rem)
    right var(--padding)
    z-index 15
    height calc(5rem + var(--border-width))
    width calc(5rem + var(--border-width))
    padding 1rem
    border-radius 100%
    cursor pointer
    transition left 0.5s
    @media _mobile
      bottom calc(var(--padding) + 5rem)
      height 3.5rem
      width 3.5rem
      z-index 5
      transform translate(0%, 0%)
      background-color var(--color)
      color white
    @media print
      display none

