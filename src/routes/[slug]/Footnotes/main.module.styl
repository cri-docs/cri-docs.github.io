.container
  position fixed
  bottom calc(var(--buttons-width) / 2)
  right calc(var(--buttons-width) / 4)
  width calc(var(--index-width) * 0.8 - var(--padding) * 2)
  max-height 80vh
  min-width 300px
  overflow-y scroll
  overflow-x hidden
  padding-inline var(--padding)
  background-color var(--color)
  color white
  font-size 0.8em
  z-index 10
