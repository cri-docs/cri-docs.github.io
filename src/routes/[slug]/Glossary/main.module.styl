.glossary
  all unset
  position relative
  color var(--color-secondary)
  cursor pointer
  @media print
    color var(--color)
  .content
    border solid transparent 1px
    margin -1px
    word-wrap normal 
    white-space nowrap
  @media (hover:hover)
    &:hover
      padding 1rem 1.5rem
      margin calc(-1rem - 1px) calc(-1.5rem - 1px)
      border-radius 99px
      border solid 1px transparent
      background-color var(--color)
      color white
.popup
  --lines 10
  display flex
  flex-direction column
  align-items flex-start
  position fixed
  top calc(1lh)
  width 400px
  gap .5lh
  margin-top .5rem
  padding 1rem 2rem
  padding-bottom 2rem
  background-color white
  color var(--color)
  border 1px solid var(--color)
  border-radius 4px
  font-size var(--small-font-size)
  z-index 5
  pointer-events none
  transform translate(0,0)
  @media _mobile
    position fixed
    width calc(95dvw - var(--padding) * 2)
    height 90dvh
    left calc(2.5dvw + var(--padding) * 1)
    top calc(var(--font-size) + var(--padding) * 2)
    padding-inline 0.9rem
    padding-right 1.5rem
    padding-bottom 8rem
    margin-top 0
    overflow scroll
    overscroll-behavior contain
    z-index 50
    pointer-events auto
    .close
      position absolute
      top 1rem
      right 1rem
      background none
      border none
      font-size 2rem
      color var(--color-secondary)
      cursor pointer
  @media print
    display none
  .title 
    font-weight bold
  .text
    width 100%
    max-height calc( 1l * var(--lines) + 1rem )
    text-overflow ellipsis
    display -webkit-box
    -webkit-box-orient vertical
    -webkit-line-clamp var(--lines)
    overflow hidden
    :global(.citation)
      padding-top .5lh
      padding-inline 2rem 
      width 100%
    @media _mobile
      display block
      overflow visible
      max-height unset
      height auto
      :global(.citation)
        padding-top 1lh
  .more
    position absolute
    bottom .5rem
    right .5rem
    padding .8rem 1.6rem
    border-radius 999px
    background-color var(--color)
    color white
    @media _mobile
      display flex
      align-items center
      justify-content center
      padding 1rem
      height 4rem
      width 4rem
  @media (hover:hover)
    &:hover
      color var(--color-secondary)
      background-color var(--background-color-secondary)

:global(.glossaryContainer)
:global(.footnotesContainer)
  display inline-block
