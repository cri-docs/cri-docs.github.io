.container
  // flex-shrink 0
  display flex
  flex-direction column
  align-items flex-start
  width calc(100vw - calc(var(--nav-width) - var(--padding) * 1))
  padding-bottom calc(var(--padding) * 3)
  hyphens auto
  // --color-secondary rgba(255, 89, 0, 0.85)
  > * 
    width var(--text-width)
  // texts
  hr
    margin 0
  :global(.blockQuote)
    background-color var(--color-secondary)
    width 100vw
    display flex
    flex-direction column
    align-items flex-start
    padding-left calc((var(--nav-width) - var(--padding) * 1))
    // color white
    transform translateX(calc((var(--nav-width) - var(--padding) * 1) * -1))
    > *
      width var(--text-width)
  p
    line-height 1.3
    letter-spacing 0.2px
  ol
  ul
    padding-inline 0
    li
      position relative
      padding-bottom .5lh
  ul
    li
      list-style none
      &:before
        --size 1.5rem
        --height 2px
        content ""
        background-color currentColor
        position absolute
        left calc(-1 * var(--size) - .5rem)
        height var(--height)
        width var(--size)
        transform translateY(calc(.5lh - (var(--height) / 2)))
  table
    width calc(var(--text-width) + var(--padding) * 2)
    padding-inline calc(var(--padding) * .5)
    font-size 1.5rem
    td
    th
      padding-bottom 1lh
      padding-top .5lh
      padding-right .5rem
      padding-left .5rem
    td:nth-child(1)
    th:nth-child(1)
      width 40%
      padding-right 1rem
    td:nth-child(2)
    th:nth-child(2)
      width 60%
      padding-left 1rem
    thead
      th
        hyphens none
        text-align left
        padding-bottom .5lh
    tbody
      tr
        border-top 1px solid lightgray
        td
          width 50%
          padding-bottom 1lh
        td:nth-child(2)
          width 50%
          padding-left .5rem
        td:nth-child(1)
          padding-right .5rem
  img
    width 100%
    max-height 70vh
    object-fit contain
    object-position left center