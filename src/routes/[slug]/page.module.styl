.container
  flex-shrink 0
  display flex
  flex-direction column
  align-items center
  width 100vw
  padding-bottom calc(var(--padding) * 3)
  z-index 5
  hyphens auto
  > * 
    width var(--text-width)
  // texts
  :global(.blockQuote)
    background-color var(--color)
    width 100%
    display flex
    flex-direction column
    align-items center
    color white
    > *
      width var(--text-width)
  ol
  ul
    padding-inline 0
    li
      position relative
      padding-bottom .5lh
  ul
    li
      list-style none
      &:before
        --size 1.5rem
        --height 2px
        content ""
        background-color currentColor
        position absolute
        left calc(-1 * var(--size) - .5rem)
        height var(--height)
        width var(--size)
        transform translateY(calc(.5lh - (var(--height) / 2)))
  table
    width calc(var(--text-width) + var(--padding) * 4)
    padding-inline calc(var(--padding) * .5)
    border-top 1px solid black
    td
    th
      width 50%
      padding-bottom 1lh
      padding-top .5lh
      padding-right .5rem
      padding-left .5rem
      border-bottom 1px solid black
    td:nth-child(2)
    th:nth-child(2)
      padding-left .5rem
    td:nth-child(1)
    th:nth-child(1)
      border-right 1px solid black
      padding-right .5rem
    thead
      th
        text-align left
        padding-bottom .5lh
        border-bottom 1px solid black
    tbody
      tr
        td
          width 50%
          padding-bottom 1lh
        td:nth-child(2)
          width 50%
          padding-left .5rem
        td:nth-child(1)
          border-right 1px solid black
          padding-right .5rem