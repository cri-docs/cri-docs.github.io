.container
  color black
  :global(.toc)
  :global(.header)
    display none
  .header
    break-after page
    font-size 5rem
    .title
      margin-top 0
      margin-bottom 0.5rem
      text-align: left;
      font-size: var(--title-font-size);
      line-height: 1.05;
      font-family: var(--font-header);
      break-after initial
      margin-bottom 1lh
      width 450px
    figure
      justify-content flex-start
      height calc(90vh - 5lh)
      max-height unset
      padding 0
      img
        height 100%
        width auto
        max-height unset
        object-fit contain
        object-position top center
    p
      font-size var(--font-size)
  :global(.preface)
  :global(.disclaimer)
  :global(.about)
    break-before page

  .toc
    padding 4rem
    .nav
      padding-bottom .3lh
      .set
        display flex
        .number
          flex-shrink 0
          display inline-block
          width 4ch
        .text
          display inline-block
      .subNav
        padding-left 4ch

  .footnotes
    break-before page
    .number
      flex-shrink 0
      width 4ch
    .footnote
      font-size 0.8em
      display flex
      margin-bottom 1rem
      word-break  break-word