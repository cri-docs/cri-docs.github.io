.container
  color black
  :global(.toc)
  :global(.header)
    display none
  .header
    break-after page
    font-size 5rem
    .title
      margin-top 0
      margin-bottom 0.5rem
      text-align: left;
      font-size: var(--title-font-size);
      line-height: 1.05;
      font-family: var(--font-header);
      break-after initial
      margin-bottom 1lh
      width 450px
    figure
      justify-content flex-start
      height calc(90vh - 5lh)
      max-height unset
      padding 0
      img
        height 100%
        width auto
        max-height unset
        object-fit contain
        object-position top center
    p
      font-size var(--font-size)
  :global(.preface)
  :global(.disclaimer)
  :global(.about)
    break-before page