
@import url('./fonts.styl');
// @import url('./raw.css')

:root 
  --text-width clamp(800px, 60vw, 1000px)

  --header-height-full 100vh
  --header-width-full clamp(300px,50vw, 700px)
  --header-height-collapsed 4rem

  --index-width 550px

  --buttons-width 4rem

  --padding 2.6rem

  --color #4E00FF
  --color-secondary red

  --font-size 1.8rem
  --text-font-size 2.6rem
  --small-font-size 1.6rem
  --weclome-font-size clamp(5rem, (100/8)vh, 8rem)
  --title-font-size 7rem
  --subtitle-font-size clamp(2rem, (100/60)vh, 3.5rem)
  --small-title-font-size 1.4rem


  --font-external "KleischLLTrialWeb", serif
  --font-header "Supremus", sans-serif
  // --font-header "ABCGalapagosAC", sans-serif
  --font "ABCFavorit", sans-serif

@media _medium
  :root
    // 


@media _small
  :root
    // 


@media _bigmobile
  :root
    // 

@media _mobile
  :root
    --col-amount 1

    --header-width-full 100vw

    --text-width 100vw
    --index-width 100vw


    --font-size 2rem
    --text-font-size 2rem
    --small-font-size 1.4rem

    --weclome-font-size 4rem
    --title-font-size var(--text-font-size)
    --subtitle-font-size 1.8rem

    --padding 1.6rem






*
  font-smooth: always;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  box-sizing border-box
  font-stretch 100%
  scrollbar-color: rgba(0,0,0,1) #fff
  scrollbar-width: thin
  vertical-align: baseline
  &::-webkit-scrollbar
    background: #fff
    border: none
    width: 8px
  &::-webkit-scrollbar-thumb
    background: #ccc
    border: none
  &::-webkit-scrollbar-track
    background: #fff
    border: none

button
  border none
  background none
  padding 0
  margin 0
  font-family inherit
  font-size inherit
  line-height inherit
  color inherit
  text-align inherit
  text-decoration none
  display inherit
  align-items inherit
  justify-content inherit

a
  all: unset;
  cursor: pointer;
  
html
  font-size 62.5%

  
html
body
  overflow-x hidden
  width 100vw

body
  font-family var(--font), sans-serif
  font-weight 500
  font-style normal
  font-size var(--font-size)
  line-height 1.15
  margin 0
  padding 0
  color #4E00FF

p
  hyphens auto

