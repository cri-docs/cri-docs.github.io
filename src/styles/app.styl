
@import url('./fonts.styl');
// @import url('./raw.css')

:root 
  --text-container-width clamp(800px, 60vw, 1000px)

  --header-height-full 100vh
  --header-width-full clamp(300px,50vw, 700px)
  --header-height-collapsed 4rem

  --index-width 550px

  --buttons-width 4rem

  --w calc(var(--text-container-width))
  --text-width calc(var(--text-container-width) - 5 * var(--padding))
  --l calc(50vw - var(--w) / 2)

  --padding 2.6rem

  --color #6109f8
  --color-light #4E00FF11
  --background-color-external #f5f5f5
  --color-external #4d0cbc
  --color-secondary #AD46FF 
  --color-secondary-external #AD46FF
  --color-secondary-menu #dcc2f1

  --font-size 1.8rem
  --text-font-size 2.6rem
  --small-font-size var(--font-size)
  --welcome-font-size clamp(5rem, (100/8)vh, 6.5rem)
  --title-font-size 6rem
  --small-title-font-size 1.4rem


  --font-external "SangBleu", sans-serif
  --font-header var(--font-external)
  --font "ABCFavorit", sans-serif

@media _medium
  :root
    --font-size 1.8rem
    --text-font-size 2.4rem
    --small-font-size var(--font-size)
    --welcome-font-size 5.8rem
    --title-font-size 5rem


@media _small
  :root
    --font-size 1.6rem
    --text-font-size 2.2rem
    --small-font-size var(--font-size)
    --welcome-font-size 6.2rem
    --title-font-size 5rem


@media _mobile
  :root
    --header-width-full 100vw

    --text-container-width 100vw
    --index-width 100vw

    --font-size 1.7rem
    --text-font-size 2rem
    --small-font-size 1.4rem

    --welcome-font-size 3rem
    --title-font-size 3.2rem

    --padding 1.6rem

@media print
  *
    // box-decoration-break clone
  :root
    --font-size 10pt
    --text-font-size var(--font-size)
    --small-font-size var(--font-size)
    --title-font-size 32pt
    --subtitle-font-size 24pt
    --padding 1.6rem
    --text-container-width clamp(500px, 78%, 650px)
    --index-width 0

p:empty
  padding 0 !important

@page
  size A4 portrait
  margin 10mm 10mm 20mm 20mm
  @bottom-right
    content counter(page) " of " counter(pages)


*
  font-smooth: always;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  box-sizing border-box
  font-stretch 100%
  scrollbar-color: var(--color-light) #fff
  scrollbar-width: thin
  vertical-align: baseline
  &::-webkit-scrollbar
    background: #fff
    border: none
    width: 8px
  &::-webkit-scrollbar-thumb
    background: #ccc
    border: none
  &::-webkit-scrollbar-track
    background: #fff
    border: none

button
  border none
  background none
  padding 0
  margin 0
  font-family inherit
  font-size inherit
  line-height inherit
  color inherit
  text-align inherit
  text-decoration none
  display inherit
  align-items inherit
  justify-content inherit

a
  all: unset;
  cursor: pointer;
  
html
  font-size 62.5%

  
html
body
  overflow-x hidden
  width 100vw

body
  min-height calc(100vh + 0.5px)
  margin 0
  padding 0
  font-family var(--font), sans-serif
  font-weight 500
  font-style normal
  font-size var(--font-size)
  line-height 1.15
  color var(--color)

p
  hyphens auto



*
  @media print
    scrollbar-width: none
  
